# Server
NODE_ENV=development
PORT=5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/angel-baby-dresses

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=30d

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@angelbabydresses.com
FROM_NAME=Angel Baby Dresses

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token

# JazzCash
JAZZCASH_MERCHANT_ID=your-merchant-id
JAZZCASH_PASSWORD=your-password
JAZZCASH_INTEGRITY_SALT=your-integrity-salt
JAZZCASH_RETURN_URL=http://localhost:5173/payment/callback
JAZZCASH_API_URL=https://sandbox.jazzcash.com.pk/ApplicationAPI/API/Payment/DoTransaction

# Easypaisa
EASYPAISA_STORE_ID=your-store-id
EASYPAISA_HASH_KEY=your-hash-key
EASYPAISA_API_URL=https://easypaisa.com.pk/api

# Frontend URL
CLIENT_URL=http://localhost:5173
