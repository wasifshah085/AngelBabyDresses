# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=5000

# Frontend URL (Your Firebase hosted domain)
CLIENT_URL=https://angelbabydresses.com

# ===========================================
# DATABASE - MongoDB on VPS
# ===========================================
# If MongoDB is on the same VPS:
MONGODB_URI=mongodb://localhost:27017/angel-baby-dresses

# If using authentication (recommended for production):
# MONGODB_URI=mongodb://username:password@localhost:27017/angel-baby-dresses?authSource=admin

# ===========================================
# AUTHENTICATION
# ===========================================
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=
c12169731f0a6aec094542a37942e08fb67e72c8529920e69003d3759399483f3aacf5c3cb0227ee7885f92a0bea8ecd5ca59a48f4a880196efc5de95cd6e3ee
JWT_EXPIRE=30d

# ===========================================
# CLOUDINARY (Image Storage)
# ===========================================
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Angel Baby Dresses

# ===========================================
# WHATSAPP BUSINESS API (Optional)
# ===========================================
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token

# ===========================================
# PAYMENT GATEWAYS
# ===========================================
# JazzCash - Use production URLs for live
JAZZCASH_MERCHANT_ID=your-merchant-id
JAZZCASH_PASSWORD=your-password
JAZZCASH_INTEGRITY_SALT=your-integrity-salt
JAZZCASH_RETURN_URL=https://yourdomain.com/payment/callback
JAZZCASH_API_URL=https://payments.jazzcash.com.pk/ApplicationAPI/API/Payment/DoTransaction

# Easypaisa
EASYPAISA_STORE_ID=your-store-id
EASYPAISA_HASH_KEY=your-hash-key
EASYPAISA_API_URL=https://easypaisa.com.pk/api
